<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function () {
            $.post("/Login",
                {
                    username: $("#userName").val(),
                }, function (result) {
                    if (result != "Error") {
                        location.href = "/PrivateChat";
                    }
                    else {
                        alert("Error login failed");
                    }
                });
        });
        $("#userName").focus();
    });

    function pushEnter(event) {
        if (event.which == 13) {
            $('#btnSubmit').click();
        }
    }
</script>

<div class="container">
    <div class="row">
        <div class="col-md-offset-5 col-md-3">
            <div class="form-login">
                <h3>Private chat test</h3>
                <input type="text" id="userName" class="form-control input-sm chat-input" placeholder="Username" onkeydown="pushEnter(event)" />
                <br />
                <div class="wrapper">
                    <span class="group-btn">
                        <a href="#" class="btn btn-primary btn-md" id="btnSubmit">Login <i class="fa fa-sign-in"></i></a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>